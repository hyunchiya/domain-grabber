{
  "manifest_version": 3,
  "name": "Google Search Domain Extractor",
  "version": "1.0",
  "description": "Extract domains from Google search results and save them to a TXT file.",
  
  "permissions": [
    "activeTab",
    "storage",
    "downloads"
  ],
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "Extract Domain Google",
    "default_icon": {
      "16": "icons/icon16.jpeg",
      "32": "icons/icon32.jpeg",
      "48": "icons/icon48.jpeg",
      "128": "icons/icon128.jpeg"
    }
  },
  
  "content_scripts": [
    {
      "matches": ["*://*.google.com/search*"],
      "js": ["content-script.js"]
    }
  ],
  
  "background": {
    "service_worker": "background.js"
  },
  
  "icons": {
    "16": "icons/icon16.jpeg",
    "32": "icons/icon32.jpeg",
    "48": "icons/icon48.jpeg",
    "128": "icons/icon128.jpeg"
  }
}